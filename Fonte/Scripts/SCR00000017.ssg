update tbpesquisa set scomando = 'SELECT TBPRODUTO.ICODIGO AS CODIGO, CAST(TBPRODUTO.SDESCRICAO || '' - '' || TBMARCA.SDESCRICAO || '' '' ||TBPRODUTO.SREFERENCIA AS CHAR(100)) AS DESCRICAO FROM TBPRODUTO JOIN TBMARCA ON TBMARCA.ICODIGO = TBPRODUTO.IMARCA'
, SCAMPO  = 'TBPRODUTO.SDESCRICAO'
WHERE ICODIGO = 8